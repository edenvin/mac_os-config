#! /usr/bin/env bash

# DESCRIPTION
# Installs Homebrew software.

# EXECUTION
# Homebrew
if ! command -v brew > /dev/null; then
  ruby -e "$(curl --location --fail --silent --show-error https://raw.githubusercontent.com/Homebrew/install/master/install)"
  export PATH="/usr/local/bin:$PATH"
  printf "export PATH=\"/usr/local/bin:$PATH\"\n" >> $HOME/.bash_profile
fi

# Readline
# brew install readline

# OpenSSL
brew install openssl

# Colorized Cat
brew install ccat

# Diff So Fancy
brew install diff-so-fancy

# direnv
# brew install direnv

# FFmpeg
# brew install ffmpeg

# FZF
brew install fzf

# Git
brew install git

# Go
brew install go

# GPG
brew install gpg

# GPG Agent
brew install gpg-agent

# hr
brew install hr

# Htop
# brew install htop

# ImageMagick
# brew install imagemagick

# JSON CLI Parser
brew install jq

# Mac App Store CLI
brew install mas

# Node
brew install node

# pgcli
brew install pgcli

# Terminal Notifier
# brew install terminal-notifier

# Tree
brew install tree

# Vim
brew install vim

# ZSH
brew install zsh
brew install z
